{
    "jps": "https://raw.githubusercontent.com/jelastic-jps/mongodb/master/addons/auto-cluster.yaml",
    "defaultState": false,
    "skipOnEnvInstall": true,
    "nodeGroupData": {
        "scalingMode": "STATELESS",
        "skipNodeEmails": true,
        "isRedeploySupport": true,
        "isResetServicePassword": "NODEGROUP"
